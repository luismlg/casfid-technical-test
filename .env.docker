# .env.docker - Configuración específica para Docker
# Este archivo es usado por docker-compose para configurar el contenedor

# Application Environment
APP_ENV=docker
APP_DEBUG=true
APP_URL=http://localhost:8080

# JWT Authentication
# IMPORTANT: Generate a secure secret for production!
# openssl rand -base64 32
JWT_SECRET=1xFcT0ccjQaRIzL1Cf7L62OFEdGMYcGdA354LpMfsPU=
JWT_ALGORITHM=HS256
JWT_EXPIRATION=3600
JWT_ENABLED=true

# Logging
LOG_LEVEL=debug
LOG_CHANNEL=single
LOG_PATH=/var/www/html/logs/api.log

# Cache
CACHE_PATH=/var/www/html/cache
CACHE_TTL_SUCCESS=3600
CACHE_TTL_FAILURE=900

# OpenLibrary API
OPENLIBRARY_BASE_URL=https://openlibrary.org
OPENLIBRARY_TIMEOUT=5
OPENLIBRARY_CONNECT_TIMEOUT=3
OPENLIBRARY_MAX_RETRIES=3

# Database Configuration (Docker MySQL)
DB_CONNECTION=mysql
DB_HOST=db
DB_PORT=3306
DB_DATABASE=casfid
DB_USERNAME=casfid_user
DB_PASSWORD=casfid_password
