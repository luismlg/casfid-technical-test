# Application Environment
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost:8000

# JWT Authentication
# CRITICAL: Change this secret in production!
# Generate a secure random string: openssl rand -base64 32
JWT_SECRET=change-me-in-production-use-openssl-rand-base64-32
JWT_ALGORITHM=HS256
JWT_EXPIRATION=3600

# Enable/Disable JWT Authentication
# Set to 'true' to enable JWT verification on POST/PUT/DELETE endpoints
JWT_ENABLED=false

# Logging
LOG_LEVEL=DEBUG
LOG_CHANNEL=single
LOG_PATH=var/logs/api.log

# Cache
CACHE_PATH=var/cache/openlibrary
CACHE_TTL_SUCCESS=3600
CACHE_TTL_FAILURE=900

# OpenLibrary API
OPENLIBRARY_BASE_URL=https://openlibrary.org
OPENLIBRARY_TIMEOUT=5
OPENLIBRARY_CONNECT_TIMEOUT=3
OPENLIBRARY_MAX_RETRIES=3

# Database Configuration
# MySQL (recommended for production)
DB_CONNECTION=mysql
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=casfid
DB_USERNAME=root
DB_PASSWORD=

# Docker MySQL Configuration (when using docker-compose)
# DB_HOST=db
# DB_USERNAME=casfid_user
# DB_PASSWORD=casfid_password

# Alternative SQLite Configuration (for development/testing)
# DB_CONNECTION=sqlite
# DB_DATABASE=database/database.sqlite
